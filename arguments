def greeting(name)
  puts "hello, #{name}!"
end

greeting("kyle")
_________________________________________________________

def greeting_programmer(name, language)
  puts "hello, #{name}. We heard you are a great #{language} programmer."
end

greeting_programmer("kyle", "python")
